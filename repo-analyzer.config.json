{
  "output_dir": "repo-analysis-output",
  "dry_run": false,
  "tree_config": {
    "max_depth": null,
    "exclude_patterns": [
      ".git",
      "__pycache__",
      "*.pyc",
      "node_modules",
      ".venv",
      "venv"
    ]
  },
  "file_summary_config": {
    "max_file_size_kb": 1024,
    "include_patterns": [
      "*.py",
      "*.js",
      "*.ts",
      "*.java",
      "*.go",
      "*.rs"
    ]
  },
  "dependency_config": {
    "scan_package_files": true,
    "package_files": [
      "package.json",
      "requirements.txt",
      "Pipfile",
      "pyproject.toml",
      "go.mod",
      "Cargo.toml"
    ]
  }
}
